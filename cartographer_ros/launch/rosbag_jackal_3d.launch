<launch>
  <!-- Based on demo_backpack_3d.launch -->

  <param name="/use_sim_time" value="true" />

  <node pkg="tf2_ros" type="static_transform_publisher" name="velodyne_tf" args="0.065 0 0.324 0 0 0 base_link velodyne" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="imu_tf" args="0 0 0 0 0 0 base_link imu_link" />

  <remap from="/imu" to="/imu/data" />
  <remap from="/points2" to="/velodyne_points"/>

  <include file="$(find cartographer_ros)/launch/jackal_3d.launch" />

  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_ros)/configuration_files/demo_3d.rviz" />
  <node name="playbag" pkg="rosbag" type="play"
      args="-r 2 --clock $(arg bag_filename) --topics /velodyne_points /imu/data" />
</launch>
